#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "üîç Checking staged changes for HTML files..."

# Liste des fichiers modifi√©s qui sont en attente de push
MODIFIED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

# Liste des fichiers HTML √† surveiller dans OB1 Vanilla
TARGET_FILES="index.html updates.html legal.html forum.html about.html"

TO_UPDATE=""

# V√©rifie si un fichier modifi√© fait partie de ceux qu'on veut timestamp
for file in $MODIFIED_FILES; do
  for target in $TARGET_FILES; do
    if [ "$file" = "$target" ]; then
      TO_UPDATE="$TO_UPDATE $file"
    fi
  done
done

# Si aucun fichier HTML important n'est modifi√© ‚ûî push direct
if [ -z "$TO_UPDATE" ]; then
  echo "‚úÖ No relevant HTML files changed. Proceeding to push."
else
  echo "üîÑ Updating timestamps for modified HTML files..."
  node scripts/add-timestamps.mjs $TO_UPDATE
  git add $TO_UPDATE
fi